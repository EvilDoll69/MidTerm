<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Landing Page</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="/styles/layout.css" />

    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
  </head>
  <body>
    <!-- Navigation -->
    <%- include('partials/_header') %>
    <div class="resource_container" style="margin-top: 100px">
      <% notes.forEach(note => { %>
      <div class="resource_box">
        <p>Title: <%= note.title %></p>
        <p>URL: <%= note.url %></p>
        <p class="text_item">Description: <%= note.description %></p>
        <p>Topic: <%= note.topic %></p>

        <form action="/api/v1/notes/<%= note.id %>/like" method="POST">
          <button type="submit" class="like">
            <i class="fas fa-heart"></i>
          </button>
        </form>

        <button
          type="button"
          class="btn btn-light"
          data-toggle="modal"
          data-target="#<%= note.id %>"
        >
        <i class="fas fa-star"></i>
        </button>
      </div>

      <!-- Modal Comment/Rate -->
      <div
        class="modal fade"
        id="<%= note.id %>"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Comment and Rate</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <form action="/api/v1/notes/<%= note.id %>/comment_rate" method="POST">

                <div class="form-group purple-border">
                  <label for="comment"></label>
                  <textarea
                    placeholder="Your comment goes here"
                    class="form-control"
                    id="comment"
                    rows="1"
                    name="comment"
                  ></textarea>
                  <br>
                  <textarea
                    placeholder="Your rating goes here"
                    class="form-control"
                    id="rate"
                    rows="1"
                    name="rate"
                  ></textarea>
                </div>

                <button for="comment" type="submit" class="btn btn-primary">
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    <%- include('partials/_footer.ejs') %>
  </body>
</html>
