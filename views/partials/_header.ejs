<header>
<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
  <div class="container-fluid">
    <% if(!user_id){ %>
    <b>
      <a class="navbar-brand" href="/">Resource Wall</a>
    </b>
    <% } else { %>
      <b>
        <a class="navbar-brand" href="/">Logged in As: <%= user_id %> </a>
      </b>
    <% } %>

    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarResponsive"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <% if(!user_id){ %>
          <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/register">Register</a>
        </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-item nav-link" href="/notes/myresources">My Resources</a>
          </li>
          <li class="nav-item">
            <a class="nav-item nav-link" href="/notes/new">Create New Resource</a>
          </li>
          <form action="/api/v1/auth/logout" method="post">
            <button class="btn btn-outline-dark" type="submit">Logout</button>
          </form>
          <% } %>
      </ul>
    </div>
  </div>
</nav>
</header>
